NGN_K=$(which k)
if [ "$NGN_K" = "" ]; then
  PATH_HERE=$(pwd)/$(dirname $0)
  PATH_REPO="$PATH_HERE/ngn-k"
  NGN_K="$PATH_REPO/k"
  if [ ! -f $NGN_K ]; then
    if [ ! -d $PATH_REPO ]; then
      git clone -v git@gitlab.com:aboa/ngn-k
    fi
    cd $PATH_REPO
    git checkout aboa-stable
    make
    cd $PATH_HERE
  fi
fi
$NGN_K bbhw.k $@
