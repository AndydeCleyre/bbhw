BQN=$(which bqn)
if [ "$BQN" = "" ]; then
    PATH_HERE=$(pwd)/$(dirname $0)
    PATH_REPO="$PATH_HERE/cbqn"
    BQN="$PATH_REPO/BQN"
    if [ ! -f $BQN ]; then
        if [ ! -d $PATH_REPO ]; then
            git clone -v git@github.com:aboalang/cbqn
        fi
        cd $PATH_REPO
        git checkout v0.6.0
        make
        cd $PATH_HERE
    fi
fi
$BQN -s -f bbhw.bqn $@
