RACKET=$(which racket)
if [ "$RACKET" = "" ]; then
    PATH_HERE=$(pwd)/$(dirname $0)
    PATH_REPO="$PATH_HERE/racket"
    RACKET="$PATH_REPO/racket/bin/racket"
    if [ ! -f $RACKET ]; then
        if [ ! -d $PATH_REPO ]; then
            git clone -v git@github.com:aboalang/racket
        fi
        cd $PATH_REPO
        git checkout v8.10
        make PKGS=""
        cd $PATH_HERE
    fi
fi
$RACKET -t bbhw.rkt -- "$@"
