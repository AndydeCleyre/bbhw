GAMBIT=$(which gsi)
if [ "$GAMBIT" = "" ]; then
  PATH_HERE=$(pwd)/$(dirname $0)
  PATH_REPO="$PATH_HERE/gambit"
  GAMBIT="$PATH_REPO/gsi/gsi"
  if [ ! -f $GAMBIT ]; then
    if [ ! -d $PATH_REPO ]; then
      git clone -v git@github.com:aboalang/gambit
    fi
    cd $PATH_REPO
    git checkout v4.9.5
    ./configure --prefix $PATH_REPO
    make -j4
    cd $PATH_HERE
  fi
fi
$GAMBIT bbhw.scm $@
