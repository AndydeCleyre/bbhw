APL=$(which apl)
if [ "$APL" = "" ]; then
    PATH_HERE=$(pwd)/$(dirname $0)
    PATH_REPO="$PATH_HERE/gnu-apl"
    APL="$PATH_REPO/src/apl"
    if [ ! -f $APL ]; then
        if [ ! -d $PATH_REPO ]; then
            git clone -v git@gitlab.com:aboa/gnu-apl
        fi
        cd $PATH_REPO
        git checkout v1.8
        ./configure CXX_WERROR=no
        make
        cd $PATH_HERE
    fi
fi
$APL -s -f bbhw.apl -- $@
