!>main(&[1
    !>count(
        & |  >($io-si  "countdown: ")
        $i| (>($io-so "Invalid countdown "_", try again...\n")
            (>count)
        )count
    >($io-so "World, Hello...") &)
    >($iter (($io-so "~A..."(&-@i)) >($cc-sleep 1)))
    >($io-so "Bye Bye.\n")
    )main
