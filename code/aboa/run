ABOA=$(which aboa)
if [ "$ABOA" = "" ]; then
    PATH_HERE=$(pwd)/$(dirname $0)
    PATH_REPO="$PATH_HERE/aboa"
    PATH_CODE="$PATH_REPO/code/aboa-s7"
    ABOA="$PATH_CODE/aboa"
    if [ ! -f $ABOA ]; then
        if [ ! -d $PATH_REPO ]; then
            git clone -v git@gitlab.com:aboa/aboa
        fi
        cd $PATH_CODE
        ./build
        cd $PATH_HERE
    fi
fi
$ABOA bbhw.aboa "$@"
